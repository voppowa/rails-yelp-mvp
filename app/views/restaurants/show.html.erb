<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= @restaurant.phone_number %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<h3>Reviews</h3>
  <ul><% @restaurant.reviews.each do |review| %>
    <li><%= review.content %> <%= review.rating %></li>
    <% end %>
  </ul>
  <%= link_to 'Add Review', new_restaurant_review_path(@restaurant), {class: "btn btn-info"} %> |
